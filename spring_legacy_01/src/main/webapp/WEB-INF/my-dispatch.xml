<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<!-- [1] datasource Bean -->
	<bean id="datasource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
	<property name="driverClassName" value="oracle.jdbc.OracleDriver"></property>
	<property name="url" value="jdbc:oracle:thin:@127.0.0.1:1521:xe"></property>
	<property name="username" value="hr"></property>
	<property name="password" value="a1234"></property>
	</bean>
	
	<!-- [2] sqlSessionFactory Bean -->
	<bean id="sqlSessionFactory"
			class="org.mybatis.spring.SqlSessionFactoryBean">
			<property name="dataSource" ref="datasource"/>
			
			<property name="mapperLocations">
				<list>
					<value>classpath:config/boardMapper.xml</value>
					<value>classpath:config/boardMapper02.xml</value>
				</list>
			</property>
			<!-- 별칭 사용시 밑에걸로 -->
			<!-- <property name="configLocation" value="classpath:config/boardMapper.xml"></property> -->
	</bean>
	
	<!-- [3] sqlSessionTemplate Bean -->
	<bean id="sqlSession" class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg ref="sqlSessionFactory"/>
	</bean>

	<bean id="dao" class="dao.LegacyDao01Imp">
		<constructor-arg ref="sqlSession"/>
	</bean>
	
	<bean id="service" class="service.LegacyService01Imp">
		<constructor-arg ref="dao"/>
		<!-- <constructor-arg ref="sqlSession"/> -->
	</bean>
	
	<bean class="controller.LegacyController01">
		<constructor-arg ref="service"/>
	</bean>
	
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/views/"/>
		<property name="suffix" value=".jsp"/>
	</bean>
</beans>
